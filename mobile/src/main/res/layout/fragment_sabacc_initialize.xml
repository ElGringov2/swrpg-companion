<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pot de Sabacc"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/InitSabaccStartingSabaccPot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:selectAllOnFocus="true"
            android:inputType="number" >
            <requestFocus/>
            
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mise de départ"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/InitSabaccHandBet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:selectAllOnFocus="true"
            android:inputType="number" />        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mise maximum par tour"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/InitSabaccMaxBet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:selectAllOnFocus="true"
            android:inputType="number" />        
            
       <LinearLayout
        android:id="@+id/InitSabaccMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
       

       <Button
           android:id="@+id/InitSabaccAddPlayer"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@android:color/transparent"
           android:text="Ajouter un joueur" />
       
       <Button
           android:id="@+id/InitSabaccStart"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@android:color/transparent"
           android:text="Démarrer la partie de Sabacc" />

    </LinearLayout>

</ScrollView>
