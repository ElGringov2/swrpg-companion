<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/vehicledefense" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/txtFore"
        android:layout_alignTop="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@drawable/gradient_defense_destination" />

    <TextView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/txtAft"
        android:layout_alignBottom="@+id/img"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/gradient_defense_select" />

    <TextView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/txtPort"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/img"
        android:layout_marginLeft="11dp"
        android:background="@drawable/gradient_defense_impossible" />


    <TextView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/txtStarboard"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/img"
        android:layout_marginRight="9dp"
        android:background="@drawable/gradient_defense_impossible"
        android:autoText="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Selectionnez une zone, puis la zone de destination."
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/textView3" />
</RelativeLayout>